{
  "name": "opentelemetry-webpack-plugin-node",
  "description": "Webpack plugin which bundles opentelemetry node core and contrib instrumentations into your code",
  "version": "4.2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "nx": {
    "targets": {
      "clean": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/opentelemetry-webpack-plugin-node",
          "command": "rm -rf dist"
        }
      }
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@opentelemetry/instrumentation": "^0.200.0",
    "tslib": "^2.8.1",
    "webpack": "^5.99.7",
    "opentelemetry-node-bundler-plugin-utils": "0.5.0"
  },
  "devDependencies": {
    "@types/webpack": "^5.28.5",
    "webpack-cli": "^6.0.1"
  }
}
