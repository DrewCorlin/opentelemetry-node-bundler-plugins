{
  "name": "opentelemetry-esbuild-plugin-node",
  "description": "Esbuild plugin which bundles opentelemetry node core and contrib instrumentations into your code",
  "version": "4.4.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DrewCorlin/opentelemetry-node-bundler-plugins.git",
    "directory": "packages/opentelemetry-esbuild-plugin-node"
  },
  "keywords": [
    "opentelemetry",
    "bundler",
    "esbuild"
  ],
  "nx": {
    "targets": {
      "clean": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/opentelemetry-esbuild-plugin-node",
          "command": "rm -rf dist"
        }
      }
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.200.0",
    "@types/node": "^22.14.1",
    "@types/semver": "^7.7.0",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "tslib": "^2.3.0",
    "opentelemetry-node-bundler-plugin-utils": "0.7.0"
  },
  "peerDependencies": {
    "esbuild": ">=0.19.x"
  }
}
